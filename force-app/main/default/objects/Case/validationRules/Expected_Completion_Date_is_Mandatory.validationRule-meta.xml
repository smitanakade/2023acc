<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Expected_Completion_Date_is_Mandatory</fullName>
    <active>true</active>
    <description>Expected Completion Date is required on the condition of Request for Extension being selected</description>
    <errorConditionFormula>AND(Request_for_Extension__c = True, ISBLANK(Expected_Completion_Date__c))</errorConditionFormula>
    <errorMessage>Please enter Expected Completion Date</errorMessage>
</ValidationRule>
