<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Extension_Reason_must_be_populated</fullName>
    <active>true</active>
    <description>Extension Reason must be populated.  If Extension Request is True, Extension Reason must be entered.</description>
    <errorConditionFormula>AND(Request_for_Extension__c,ISBLANK(Extension_Reason__c))</errorConditionFormula>
    <errorMessage>Please select Extension Reason</errorMessage>
</ValidationRule>
