<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>VR32_CONREL_OtherContactType</fullName>
    <active>true</active>
    <description>Other Contact Type is mandatory.</description>
    <errorConditionFormula>AND(ISPICKVAL(Organisation_Contact_Type__c, &apos;General Enquiry&apos;),!ISBLANK(Other_Contact_Type__c))</errorConditionFormula>
    <errorDisplayField>Other_Contact_Type__c</errorDisplayField>
    <errorMessage>If General Enquiry is selected, Other Contact Type is not required.</errorMessage>
</ValidationRule>
